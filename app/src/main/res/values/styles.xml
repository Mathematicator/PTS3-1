<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/button_material_light</item>
    </style>
    <style name="DarkCustomStepperLayoutTheme" parent="MSDefaultStepperLayoutTheme">
        <item name="ms_stepTabTitleStyle">@style/DarkStepTabTitleStyle</item>
        <item name="ms_stepTabSubtitleStyle">@style/DarkStepTabSubtitleStyle</item>
        <item name="ms_stepTabIconBackgroundStyle">@style/StepIcon</item>
        <item name="ms_stepTabNumberStyle">@style/StepNumber</item>
        <item name="ms_stepTabDoneIndicatorStyle">@style/StepDone</item>
    </style>
    <style name="DarkStepTabTitleStyle" parent="MSStepTabTitle">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="DarkStepTabSubtitleStyle" parent="MSStepTabTitle">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="StepIcon" parent="MSStepTabIconBackground">
        <item name="android:layout_height">@dimen/ms_step_tab_counter_size</item>
        <item name="android:layout_width">@dimen/ms_step_tab_counter_size</item>
    </style>
    <style name="StepNumber" parent="MSStepTabNumber">
        <item name="android:layout_width">@dimen/ms_step_tab_counter_size</item>
        <item name="android:layout_height">@dimen/ms_step_tab_counter_size</item>
        <item name="android:textSize">@dimen/ms_step_tab_circle_font_size</item>
    </style>
    <style name="StepDone" parent="MSStepTabDoneIndicator">
        <item name="android:layout_width">@dimen/ms_step_tab_counter_size</item>
        <item name="android:layout_height">@dimen/ms_step_tab_counter_size</item>
    </style>

</resources>
