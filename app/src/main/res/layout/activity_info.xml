<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pts3.sport.info"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_prof"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:textSize="70dp"
            android:id="@+id/userInfo"
            android:textColor="@color/gris"
            android:layout_marginLeft="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:background="#e04f5f"
            android:text="Se déconnecter"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:id="@+id/disconnect"
            />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Choisir une classe"
            android:id="@+id/choisirClasse"
            android:src="@drawable/logo_evaluation"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commencer l'évaluation"
            android:textColor="@color/gris"
            android:textSize="50dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>





</LinearLayout>
